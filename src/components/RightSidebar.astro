---
// src/components/RightSidebar.astro
export interface Props {
    categories: string[];
}
const { categories } = Astro.props;
// Helper to create a URL-friendly ID from a category name
const createCategoryId = (category: string) => category.toLowerCase().replace(/[^a-z0-9]+/g, '-');
---
<aside class="w-64 sticky top-24 self-start p-4 bg-gray-50 dark:bg-gray-800 rounded-lg max-h-[calc(100vh-7rem)] overflow-y-auto">
    <h3 class="text-lg font-semibold mb-4 text-gray-900 dark:text-white">Categories</h3>
    <ul id="sidebar-categories">
        {categories.map(category => (
            <li class="mb-2">
                <a href={`#${createCategoryId(category)}`} class="text-gray-700 dark:text-gray-300 hover:text-blue-500 dark:hover:text-blue-400 transition-colors duration-200">
                    {category}
                 </a>
            </li>
        ))}
    </ul>
</aside>