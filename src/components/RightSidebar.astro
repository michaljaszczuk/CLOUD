---
// src/components/RightSidebar.astro
export interface Props {
    categories: string[];
}
const { categories } = Astro.props;

// Helper to create a URL-friendly ID from a category name
const createCategoryId = (category: string) => category.toLowerCase().replace(/[^a-z0-9]+/g, '-');
---
<aside class="w-64 sticky top-4 self-start p-4 bg-gray-50 rounded-lg max-h-[95vh] overflow-y-auto">
    <h3 class="text-lg font-semibold mb-4">Categories</h3>
    <ul id="sidebar-categories">
        {categories.map(category => (
            <li class="mb-2">
                <a href={`#${createCategoryId(category)}`} class="text-gray-700 hover:text-blue-500 transition-colors duration-200">
                    {category}
                </a>
            </li>
        ))}
    </ul>
</aside>